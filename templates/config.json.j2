{
    "agent": {
        "metrics_collection_interval": {{ cw_metrics_collection_interval }},
        "run_as_user": "root"
    },
    "metrics": {
        "append_dimensions": {
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
            "ImageId": "${aws:ImageId}",
            "InstanceId": "${aws:InstanceId}",
            "InstanceType": "${aws:InstanceType}"
        },
        "metrics_collected": {
            "collectd": {
                "metrics_aggregation_interval": {{ cw_metrics_aggregation_interval }}
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ],
                "metrics_collection_interval": {{ cw_metrics_collection_interval }},
                "resources": [
                    "*"
                ]
            },
            "mem": {
                "measurement": [
                    "mem_used_percent"
                ],
                "metrics_collection_interval": {{ cw_metrics_collection_interval }}
            },
            "statsd": {
                "metrics_aggregation_interval": {{ cw_metrics_aggregation_interval }},
                "metrics_collection_interval": {{ cw_metrics_collection_interval }},
                "service_address": {{ cw_service_address }}
            }
        }
    }
}